doctype html
html(lang='fr')
  head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
    link(rel='shortcut icon', type='image/png', href='images/favicon.png')
    link(rel='stylesheet', type='text/css', href='stylesheets/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='stylesheets/bootstrap-slider.css')
    link(rel='stylesheet', type='text/css', href='stylesheets/style.css')
    script(type='text/javascript', src='js/festival.min.js')
    //script(type='text/javascript', src='js/modernizr.min.js')
    //script(type='text/javascript', src='js/jquery.min.js')
    //script(type='text/javascript', src='js/jquery.hammer-full.min.js')
    //script(type='text/javascript', src='js/bootstrap.min.js')
    //script(type='text/javascript', src='js/bootstrap-slider.js')
    //script(type='text/javascript', src='js/jquery.hotkeys.js')
    //script(type='text/javascript', src='js/templates.js')
    //script(type='text/javascript', src='js/utils.js')
    //script(type='text/javascript', src='js/jquery.store.js')
    //script(type='text/javascript', src='js/jquery.player.js')
    //script(type='text/javascript', src='js/jquery.fastsearch.js')
    //script(type='text/javascript', src='js/views.js')
    //script(type='text/javascript', src='js/init.js')
    if debug
      script(type='text/javascript', src='js/soundmanager2-jsmin.js')
    else
      script(type='text/javascript', src='js/soundmanager2-nodebug-jsmin.js')
    script(type='text/javascript').
      soundManager.setup({
        url: '#{soundmanager.url}',
        flashVersion: '#{soundmanager.flashVersion}',
        useFlashBlock: #{soundmanager.useFlashBlock},
        useHTML5Audio: #{soundmanager.useHTML5Audio},
        preferFlash: #{soundmanager.preferFlash}
      });
    script(type='text/javascript', src='js/ajax.js')
    //TODO plugins
    
    title #{title}
  body
    header.container-fluid
      include player
    main.container-fluid
      .row.fill
        .wrapper.col-xd-12.col-md-3.wrapper-search
          .search.wrapped
            .input-group
              input#search.form-control(type="search", placeholder="Search an artist", autocomplete="off")
              span.input-group-addon
                span.glyphicon.glyphicon-search
            div.list-group
              include tab/search
        .wrapper.hidden-xs.hidden-sm.col-xd-12.col-md-6.wrapper-albums
          .panel.wrapped.albums
            .panel-body
        .wrapper.hidden-xs.hidden-sm.hidden.col-xd-12.col-md-6.wrapper-genres
          .panel.wrapped.genres
            .panel-body
        .wrapper.hidden-xs.hidden-sm.col-xd-12.col-md-3.wrapper-playlists
          ul.nav.nav-tabs.playlists-tabs
            li.playing.active
              a(href="#playing", data-toggle="tab") Now playing
            li.selection
              a(href="#selection", data-toggle="tab") Selection
          .panel.playlists
            .tab-content
              #playing.tab-pane.active
                include tab/playlist
              #selection.tab-pane
                include tab/playlist