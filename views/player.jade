#player
  .controls
    a.btn.btn-default.control.play(title='Play', href='javascript:void(0);')
    a.btn.btn-default.control.prev(title='Previous track', href='javascript:void(0);')
    a.btn.btn-default.control.next(title='Next track', href='javascript:void(0);')
  .loader
    .info
      span.elapsed-time 00:00
      span.name Waiting for a track
      span.total-time 00:00
    .progressbar
      input.hidden(data-slider-id='progress', data-slider-handle="slim", data-slider-min="0", data-slider-max="1", data-slider-step="1", data-slider-enabled="false" data-slider-value="0")
  .controls.pull-right
    a.btn.btn-default.control.loop(title='Loop (currently off)', data-title='Loop (currently on)', href='javascript:void(0);')
    a.btn.btn-default.control.shuffle(title='Shuffle (currently off)', data-title='Shuffle (currently on)', href='javascript:void(0);')
    .dropdown
      a.btn.btn-default.control.volume(title='Volume', data-toggle='dropdown', href='javascript:void(0);')
      .volume-wrapper.dropdown-menu
        input(data-slider-min='0', data-slider-max='100', data-slider-step='1', data-slider-value='100', data-slider-orientation='vertical', data-slider-handle='slim', data-slider-tooltip='hide')